<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="EDIT YOUR PREFERENCE LIST">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="Chocolate Chip Pancake,Tator Tots,Cavier"
        android:inputType="textCapWords"
        android:key="add_food"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Add My Favorite Food"
        android:summary="" />

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <MultiSelectListPreference
        android:entries="@array/food_list_entries"
        android:entryValues="@array/food_list_values"
        android:key="remove_food"
        android:summary="Press to show your preference"
        android:title="Remove My Favorite Food"
        android:dialogTitle="Select all options to remove"/>

    </PreferenceCategory>
</PreferenceScreen>
